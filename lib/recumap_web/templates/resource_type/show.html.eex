<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "Edit", to: Routes.resource_type_path(@conn, :edit, @resource_type), class: "torch-button" %>
    <%= link "Back", to: Routes.resource_type_path(@conn, :index), class: "torch-button" %>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>Resource type Details</h3>
    </div>
    <ul>
      
        <li>
          <div class="torch-show-label">Name:</div>
          <div class="torch-show-data"><%= @resource_type.name %></div>
        </li>
      
        <li>
          <div class="torch-show-label">Description:</div>
          <div class="torch-show-data"><%= @resource_type.description %></div>
        </li>
      
    </ul>
  </div>
</section>